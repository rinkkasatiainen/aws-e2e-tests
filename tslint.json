{
    "extends": [
      "tslint-eslint-rules"
    ],
    "rulesDirectory": [
      "node_modules/tslint-immutable/rules"
    ],
    "linterOptions": {
      "exclude": [
        "src/shared-types/**/*",
        "src/api/helpers/clearing.ts",
        "src/interfaces/magento/M1/xml-rpc/*",
        "src/helpers/m1/xml-rpc-api.ts"
      ]
    },
    "rules": {
      "adjacent-overload-signatures": true,
      "align": [
        true,
        "parameters",
        "statements"
      ],
      "array-type": [
        true,
        "array-simple"
      ],
      "arrow-parens": [true, "ban-single-arg-parens"],
      "callable-types": true,
      "class-name": true,
      "comment-format": [
        true,
        "check-space"
      ],
      "completed-docs": [
        true,
        {
          "enums": true,
          "functions": {
            "visibilities": [
              "exported"
            ]
          },
          "methods": {
            "locations": "instance",
            "privacies": [
              "public",
              "protected"
            ]
          }
        }
      ],
      "curly": true,
      "cyclomatic-complexity": [
        false
      ],
      "eofline": true,
      "forin": true,
      "import-spacing": true,
      "indent": [
        true,
        "spaces"
      ],
      "interface-name": [
        true,
        "never-prefix"
      ],
      "interface-over-type-literal": true,
      "jsdoc-format": true,
      "label-position": true,
      "linebreak-style": [
        true,
        "LF"
      ],
      "max-classes-per-file": [
        true,
        1
      ],
      "max-line-length": [
        true,
        120
      ],
      "member-access": true,
      "member-ordering": [
        true,
        "public-before-private",
        "static-before-instance",
        "variables-before-functions"
      ],
      "new-parens": true,
      "newline-before-return": true,
      "no-angle-bracket-type-assertion": true,
      "no-any": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": [
        true,
        2
      ],
      "no-console": [
        true,
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ],
      "no-construct": true,
      "no-debugger": true,
      "no-duplicate-super": true,
      "no-duplicate-variable": true,
      "no-empty": true,
      "no-empty-interface": true,
      "no-eval": true,
      "no-expression-statement": false,
      "no-floating-promises": [
        true,
        "Bluebird"
      ],
      "no-return-await": true,
      "no-internal-module": true,
      "no-invalid-template-strings": true,
      "no-invalid-this": true,
      "no-irregular-whitespace": true,
      //"no-let": true,
      "no-misused-new": true,
      "no-mixed-interface": false,
      "no-namespace": true,
      "no-null-keyword": false,
      "no-object-literal-type-assertion": true,
      "no-parameter-properties": false,
      "no-reference": true,
      "no-require-imports": true,
      "no-shadowed-variable": true,
      "no-sparse-arrays": true,
      "no-string-literal": true,
      "no-string-throw": true,
      "no-switch-case-fall-through": true,
      "no-this": false,
      "no-trailing-whitespace": true,
      "no-unnecessary-callback-wrapper": true,
      "no-unsafe-finally": true,
      "no-unused-expression": [
        true,
        "allow-fast-null-checks"
      ],
      "no-unused-variable": true,
      "no-use-before-declare": true,
      "no-var-keyword": true,
      "no-var-requires": true,
      "no-void-expression": [
        true,
        "ignore-arrow-function-shorthand"
      ],
      "number-literal-format": true,
      "object-curly-spacing": "always",
      "object-literal-key-quotes": [
        true,
        "consistent-as-needed"
      ],
      "object-literal-shorthand": false,
      "object-literal-sort-keys": false,
      "one-line": [
        true,
        "check-catch",
        "check-else",
        "check-finally",
        "check-open-brace",
        "check-whitespace"
      ],
      "one-variable-per-declaration": [
        true,
        "ignore-for-loop"
      ],
      "only-arrow-functions": [
        true
      ],
      "ordered-imports": [
        true,
        {
          "import-sources-order": "lowercase-last",
          "named-imports-order": "lowercase-first"
        }
      ],
      "prefer-const": true,
      "prefer-for-of": true,
      "prefer-function-over-method": true,
      "prefer-method-signature": false,
      "quotemark": [
        true,
        "single",
        "jsx-single",
        "avoid-escape"
      ],
      "radix": true,
      "readonly-array": false,
      //"readonly-keyword": true,
      "restrict-plus-operands": true,
      "semicolon": [
        true,
        "always"
      ],
      "space-before-function-paren": [
        true,
        {
          "asyncArrow": "always"
        }
      ],
      "switch-default": true,
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          },
          "singleline": "never"
        }
      ],
      "triple-equals": [
        true,
        "allow-null-check"
      ],
      "typedef": [
        false,
        "call-signature",
        "parameter",
        "property-declaration",
        "variable-declaration",
        "member-variable-declaration",
        "object-destructuring",
        "array-destructuring"
      ],
      "typedef-whitespace": [
        true,
        {
          "array-destructuring": "nospace",
          "arrow-call-signature": "nospace",
          "arrow-parameter": "nospace",
          "call-signature": "nospace",
          "index-signature": "nospace",
          "member-variable-declaration": "nospace",
          "object-destructuring": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "array-destructuring": "onespace",
          "arrow-call-signature": "onespace",
          "arrow-parameter": "onespace",
          "call-signature": "onespace",
          "index-signature": "onespace",
          "member-variable-declaration": "onespace",
          "object-destructuring": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ],
      "unified-signatures": true,
      "use-isnan": true,
      "variable-name": [
        true,
        "ban-keywords",
        "check-format",
        "allow-leading-underscore"
      ],
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-type",
        "check-typecast",
        "check-preblock"
      ]
    }
  }
